{% extends 'AlbatrossUserBundle:Default:layout_v2.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('/css/status.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block title %}
Survey Status List
{% endblock %}
{% block pageHeading 'Survey Status List' %}
{% block breadcrumb %}
    <li><a href="{{ path('admin') }}">Administration</a></li>
    <li class="active">Survey Status List</li>
{% endblock %}
{% block body -%}
    {{ render(controller('AlbatrossUserBundle:Admin:menu', {'active': 'status' })) }}
    <h1>Status list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th class="short">Editable</th>
                <th class="short">Sort</th>
                <th class="short">Today</th>
                <th class="short">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.editable }}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.today }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('status_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('status_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('status_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
