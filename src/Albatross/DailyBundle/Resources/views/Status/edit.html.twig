{% extends 'AlbatrossUserBundle:Default:layout_v2.html.twig' %}

{% block title %}
Edit Survey Status
{% endblock %}
{% block pageHeading 'Edit Survey Status' %}
{% block breadcrumb %}
    <li><a href="{{ path('admin') }}">Administration</a></li>
    <li class="active">Edit Survey Status</li>
{% endblock %}
{% block body -%}
    {{ render(controller('AlbatrossUserBundle:Admin:menu', {'active': 'status' })) }}
    <h1>Status edit</h1>

    <form action="{{ path('status_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('status') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('status_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
