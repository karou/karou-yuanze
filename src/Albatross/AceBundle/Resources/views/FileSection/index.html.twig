{% extends 'AlbatrossUserBundle:Default:layout_v2.html.twig' %}
{% block title %}
File Section List
{% endblock %}
{% block pageHeading 'File Section List' %}
{% block breadcrumb %}
    <li><a href="{{ path('admin') }}">Administration</a></li>
    <li class="active">File Section List</li>
{% endblock %}
{% block body -%}
    {{ render(controller('AlbatrossUserBundle:Admin:menu', {'active': 'filesection' })) }}
    <h1>FileSection list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('filesection_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('filesection_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('filesection_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('filesection_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
