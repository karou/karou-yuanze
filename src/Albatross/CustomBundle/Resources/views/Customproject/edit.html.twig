{% extends 'AlbatrossUserBundle:Default:layout.html.twig' %}
{% block title %}
Project Edit
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
    $(document).ready(function() {
        //set default value
        $('#albatross_custombundle_customprojecttype_customclient').val('{{ entity.customclient.id }}');
        $('#albatross_custombundle_customprojecttype_type').val('{{ entity.type }}');
        $('#albatross_custombundle_customprojecttype_scope').val('{{ entity.scope }}');
    });
</script>
{% endblock %}
{% block content -%}
    <h1>Project edit</h1>
    
    <form action="{{ path('customproject_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customproject') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('customproject_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
