{% extends 'AlbatrossUserBundle:Default:layout.html.twig' %}

{% block title %}
Client Edit
{% endblock %}
{% block content -%}
    <h1>Client edit</h1>

    <form action="{{ path('customclient_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        <img width="100" height="100" src="{{ asset(entity.getWebPath) }}" style="float: left;" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customclient') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('customclient_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
