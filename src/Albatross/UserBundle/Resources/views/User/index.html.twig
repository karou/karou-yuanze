{% extends 'AlbatrossUserBundle:Default:layout.html.twig' %}
{% block title %}
User List
{% endblock %}
{% block content -%}
<table class="user_list">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td {%if entity.status == 'active'%}class ="active-user"{% elseif entity.status == 'deleted' %}class = "deleted"{%endif%}>{{ entity.username }}</td>
                <td {%if entity.status == 'active'%}class ="active-user"{% elseif entity.status == 'deleted' %}class = "deleted"{%endif%}>{{ entity.email }}</td>
                <td> 
                    {%if entity.status == 'active'%}
                    <ul>
                        <li>
                            <a class="edit-button" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a>
                        </li>
                        <li>
                            <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="POST">
                                <a href="#" class="disable-button" onclick="$(this).parent().submit();">Disable</a>
                            </form>
                        </li>
                    </ul>
                    {% elseif entity.status == 'deleted' %}
                        <font class="deleted">Disabled</font>
                        <form action="{{ path('user_enable', { 'id': entity.id }) }}" method="POST">
                            <a class="enable-button" href="#" onclick="$(this).parent().submit();">Enable</a>
                        </form>
                    {%endif%}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ path('user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
