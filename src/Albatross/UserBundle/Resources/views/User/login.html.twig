        <script src="js/functions.js"></script>
    </head>
    <body>
        <div class="layout">
            <!-- Navbar================================================== -->
            <div class="navbar navbar-inverse top-nav">
                <div class="navbar-inner">
                    <div class="container">
                        <span class="home-link"><a href="index.html" class="icon-home"></a></span><a class="brand" href="javascript:;"><img src="images/logo.png" width="103" height="50" alt="Albatross Portal"></a>
                        <div class="btn-toolbar pull-right notification-nav">
                            <div class="btn-group">
                                <div class="dropdown">
                                    <a class="btn btn-notification"><i class="icon-reply"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <ul class="errorUl" id="loginErrDiv" style="display:none;">
                    <li></li>
                </ul>
                <ul class="successUl" id="loginSuccDiv" style="display:none;">
                    <li></li>
                </ul>
                <form class="form-signin-ribbon" method="post" name="loginForm" id="loginForm" action="{{ path('login_check') }}" onsubmit="return submitLoginForm();">
                    <div class="content-widgets gray">
                        <div class=" login-head orange">
                            <h3 class="form-signin-heading">Please sign in</h3>
                        </div>
                        <div class="long-ribbon">
                            <div class="ribbon-content">
                                <div class="controls input-icon">
                                    <i class=" icon-user-md"></i>
                                    <input type="text" name="_username" id="username" class="input-block-level" placeholder="Username or Email" required="" value="" />
                                </div>
                                <div class="controls input-icon">
                                    <i class=" icon-key"></i><input type="password" name="_password" id="password" class="input-block-level" placeholder="Password" required="" />
                                </div>
                                <label class="checkbox">
                                    <input type="checkbox" value="remember-me" id="remember" name="_remember_me"> Remember me </label>
                                <input type="hidden" name="_target_path" value="/" />
                                <button class="btn btn-inverse btn-block" type="submit" id="signInBtn">Sign in</button>
                            </div>
                        </div>
                        <div class="forgot-block">
                            <h4>Forgot your password ?</h4>
                            <p>
                                <a href="#">Click here</a> to reset your password.
                            </p>
                            <h5>Don't have an account yet ?</h5>
                            <button class="btn btn-success btn-block" type="submit">Create Account</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>