<li class="dropdown"> 
    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
        {{ user.username }}
        <b class="icon-angle-down"></b>
        <img height="28px" width="28px" src="{{ user.pic ?  asset(user.webPath) : '/images/user/default.png' }}" />
    </a>
    <div class="dropdown-menu">
        <ul>
            {% if role_button == 1 %}
            <li><a href="{{ path("admin") }}">Administration</a></li>
            {% endif %}
            <li><a href="{{ path("user_profile") }}">Profile</a></li>
            <li><a href="{{ path("logout") }}">Logout</a></li>
        </ul>
    </div>
</li>