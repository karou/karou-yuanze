{% if is_granted('ROLE_USER') %}
<div id="link_box">
        <a class="link_button" href="http://albatross.activeboard.com/p/news/" target="_blank" >Albatross Forum</a>
        <a class="link_button" href="https://hk.albatrossonline.com/document.asp?alias=ATC" target="_blank" >Training Center</a>
            {% if user.aceusername is defined %}
        <form action="https://albatross.aceproject.com/Login.asp?" method="post" name="login" target="_blank">
            <input type="text" name="Login" value="{{ user.aceusername }}" style="display: none" />
            <input type="text" name="Password" value="{{ user.acepassword }}" style="display: none" />
            <input type="hidden" value="LoginForm" name="FormName">
            <input id ="ace_button" title="Go to albatross.aceproject.com" type="button" value="ACE" />
        </form>
                {% endif %}
                {% if user.aolusername is defined %}
        <form action="https://www.albatrossonline.com/loginProcess.asp?" method="post" name="loginfield" target="_blank">
            <input type="text" name="Login" value="{{ user.aolusername }}" style="display: none" />
            <input type="text" name="Password" value="{{ user.aolpassword }}" style="display: none" />
            <input id="loginPage" type="hidden" name="loginPage">
            <input id ="aol_button" title="Go to albatrossonline.com" type="button" value="AOL" />        
        </form>
                {% endif %}
                {% if user.crmusername is defined %}
        <form action="http://180.178.35.106/SugarCRM/index.php?module=Home&action=index"  onsubmit="return document.getElementById('cant_login').value === '';"  method="post" name="DetailView" target="_blank">
            <input id="user_name" type="text" value="{{user.crmusername}}" name="user_name" tabindex="1" style="display: none">
            <input id="user_password" type="password" value="{{user.crmpassword}}" name="user_password" tabindex="2" style="display: none">
            <input type="hidden" name="module" value="Users">
            <input type="hidden" name="action" value="Authenticate">
            <input type="hidden" name="return_module" value="Users">
            <input type="hidden" name="return_action" value="Login">
            <input type="hidden" id="cant_login" name="cant_login" value="">
            <input type="hidden" name="login_module" value="Home">
            <input type="hidden" name="login_action" value="index">
            <input type="hidden" name="login_record" value="">
            <input class="button primary" type="button" tabindex="3" id="login_button" name="Login" value="CRM">
        </form>
                {% else %}
        <a class="link_button" href="http://180.178.35.106/SugarCRM/index.php?action=Login&module=Users&login_module=Home&login_action=index"  target="_blank">CRM</a>
                {% endif %}
        <a class="link_button" href="http://www.roleplaycenter.com/auth/login" target="_blank" >Role Play Center</a>
    </div>
{% endif %}