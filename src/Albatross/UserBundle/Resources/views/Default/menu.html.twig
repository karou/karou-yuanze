<ul class="nav nav-tabs">
    {% for k,item in menu %}
    {% if active is defined and active == k %}
    <li class="active dropdown">
    {% else %}
    <li class="dropdown">
    {% endif %}
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{ item.label }}<span class="caret"></span></a>
        {% if item.children is defined %}
        <ul class="dropdown-menu" role="menu">
            {% for child in item.children %}
            <li>
                <a href="{{ path(child.route) }}">{{ child.label }}</a>
            </li>
            {% endfor %}
        </ul>
        {% endif %}
    </li>
    {% endfor %}
</ul>